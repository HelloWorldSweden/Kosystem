@model RegisterUserViewModel
@inject IRoomService RoomService

@{
    var rooms = await RoomService.ListRoomsAsync();
}

<div id="loginDiv" class="p-b-160 p-t-50">
    <form class="login100-form validate-form center-divs"
          id="loginForm"
          method="post"
          onsubmit="return false;"
          data-ajax="@Url.Action(nameof(HomeAPIController.JoinRoom), "HomeAPI")">

        <div class="container-login100-narrow">
            <span class="login100-form-title p-b-43">
                Hello World!<br />
                Kö inloggning
            </span>

            <div class="wrap-input100 validate-input">
                <input class="input100" asp-for="UserName">
                <label class="label-input100" asp-for="UserName"></label>
            </div>
        </div>

        <div class="container-login100-wide flex-w flex-c p-t-19">

            @foreach (var room in rooms)
            {
                <button class="login100-form-btn roomBtn" type="button" name="@Html.NameFor(m => m.RoomId)" value="@room.Id">
                    Delta rum @room.Name
                </button>
            }
            @if (rooms.Count == 0)
            {
                <i>Det finns inga rum.</i>
            }

        </div>

        <div class="container-login100-narrow">
            <div class="text-center w-full p-t-23">
                <a href="#" class="txt1">
                    Forgot password?
                </a>
            </div>
        </div>
    </form>
</div>
