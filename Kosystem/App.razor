@inject IStringLocalizer<App> Localizer

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h1>@Localizer["Unauthorized, header"]</h1>
                    <p>
                        @Localizer["Unauthorized, description"]
                        <a href="/login">@Localizer["Unauthorized, login link"]</a>
                    </p>
                </NotAuthorized>
                <Authorizing>
                    <h1>@Localizer["Authorizing, header"]</h1>
                    <p>
                        @Localizer["Authorizing, description"]
                    </p>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <h1>@Localizer["Not found, header"]</h1>
                <p>
                    @Localizer["Not found, description"]
                    <a href="/">@Localizer["Not found, index link"]</a>
                </p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
