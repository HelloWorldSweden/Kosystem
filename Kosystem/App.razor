
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h1>Ursäktar, men 401</h1>
                    <p>Du har inte rättigheter att komma åt denna sida. Du kan <a href="/login">logga in här</a>.</p>
                </NotAuthorized>
                <Authorizing>
                    <h1>Loggar in dig...</h1>
                    <p>Vänta lite så kommer du rätt snart.</p>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <h1>Ursäktar, men 404</h1>
                <p>Det verkar inte finnas någon sida här. Du kan <a href="/">återgå till start här</a>.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
